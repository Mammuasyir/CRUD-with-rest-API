<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyPacket" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/oren</item>
        <item name="colorPrimaryVariant">@color/oren_gelap</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/abu</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyPacket.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="buttonstyle1" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/oren_gelap</item>
        <item name="colorButtonNormal">@color/red</item>
        <item name= "textFillColor">@color/oren</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">20sp</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="tint">@color/black</item>
        <item name="android:textColorHint">@color/transparent</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>

    <style name="Theme.MyPacket.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyPacket.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>